{
  "title": "Change caps_lock and left_control to left_control and escape if alone",
  "rules": [
    {
      "description": "Caps lock",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "parameters": {
              "basic.to_if_alone_timeout_milliseconds": 500
          }
        }
      ]
    },
    {
      "description": "Left control",
      "manipulators": [ {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "parameters": {
              "basic.to_if_alone_timeout_milliseconds": 500
          }
        }
      ]
    }
  ]
}
